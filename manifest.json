{
  "manifest_version": 3,
  "name": "LeetCode Submit Guard",
  "version": "1.0",
  "description": "No more accidental submissions on LeetCode. Try today! 1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },"action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [{
    "matches": ["*://leetcode.com/problems/*"],
    "js": ["content.js"]
  }]
}